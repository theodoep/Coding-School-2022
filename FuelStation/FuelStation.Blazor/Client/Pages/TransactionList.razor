@page "/transactionList"
@inject HttpClient httpClient
@inject IJSRuntime jsRuntime
@inject NavigationManager navigationManager

<h3>Transaction List</h3>
<button class="btn  btn-primary" @onclick="AddItem">Add</button>

@if (isLoading) {
	<p>Loading ... </p>
}
else {
	<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Date</th>
			<th>CustomerID</th>
			<th>EmployeeID</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var trans in transactionList) {
			<tr>
				<td>@trans.Date</td>
				<td>@trans.CustomerID</td>
				<td>@trans.EmployeeID</td>
				<td>
				<button class="btn btn-primary" @onclick="() => EditItem(trans)">Edit</button>
				<button class="btn btn-danger" @onclick="() => DeleteItem(trans)">Delete</button>
				</td>
				
			</tr>
		}
	</tbody>
</table>
}


